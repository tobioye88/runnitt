    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#BDEDFF</item>
        <item name="colorPrimaryDark">#0A1835</item>
        <item name="colorAccent">#BDEDFF</item>
